{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@/*" : ["src/*"],
      "@route": ["src/routes/index"],
      "@route/*" : ["src/routes/*"],
      "@page" : ["src/pages/index"],
      "@page/*" : ["src/pages/*"],
      // "@pageComponent" : ["src/pageComponents/index"],
      // "@pageComponent/*" : ["src/pageComponents/*"],
      "@config" : ["src/configs/index"],
      "@config/*" : ["src/configs/*"],
      "@asset/*" : ["src/assets/*"],
      "@css/*" : ["src/assets/css/*"],
      // "@js/*" : ["src/assets/js/*"],
      // "@font/*" : ["src/assets/fonts/*"],
      // "@img/*" : ["src/assets/images/*"],
      // "@component" : ["src/components/index"],
      // "@component/*" : ["src/components/*"],
      // "@lang/*" : ["src/langs/*"],
      // "@store" : ["src/store/index"],
      // "@store/*" : ["src/store/*"],
    }
  },
  "include": ["src"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
